{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "lib/authOptions.js", "app/api/auth/[...nextauth]/authOptions.ts", "app/profile/[username]/page.jsx", "components/ViewPageSidebar.jsx", "app/dashboard/[username]/page.jsx", "components/Calendar.jsx", "app/messages/inbox/[id]/page.jsx", "app/api/ably/auth/route.js", "app/applyLister/page.jsx", "sections/verifyEmailPage/Hero.jsx", "app/messages/page.jsx", "app/api/webhook/stripe/route.js", "sections/paymentPage/Header.jsx", "app/payment/page.jsx"],
  "exclude": ["node_modules"],
  "types": ["next-auth", "./types/next-auth"]
}
